<body>
    <h1>Ajax Demo!</h1>
    <div class="form-group">
        <form id="Demo">
            <input type="text" id="stdId" placeholder="id" required />
            <br />
            <br />
            <input type="text" id="stdName" placeholder="name" required/>
            <br />
            <br />
            <input type="text" id="stdEmail" placeholder="email" required/>
            <br />
            <br />
            <input type="button" value="Send Data" onclick="BtnClick()" />
        </form>
    </div>
</body>
@section scripts{
    @Scripts.Render("~/bundles/jquery");
    <script>
        function BtnClick() {
            $("#Demo").validate({
                    rules: {
                        id: {
                            required: true,
                            minlength: 3,
                            number: true,
                        },
                        name: {
                            required: true,
                        },
                        email: {
                            required: true,
                            email: true
                        },
                    },
                    messages: {
                        id: {
                            required: "Please enter your id",
                            number: "id should be in number",
                        },
                        name: {
                            required: "Please enter your name",

                        },
                        email: {
                            required: "Please enter your email",
                            email: "The email should be in the format: abc@domain.tld",
                        },

                    }
                });
            var id = $("#stdId").val();
            var name = $("#stdName").val();
            var email = $("#stdEmail").val();

            var obj = {
                Id: id,
                Name: name,
                Email: email
            }
            //var obj1 = JSON.stringify(obj);
            SubmitForm(obj);
        }
        function SubmitForm(obj) {

            $.ajax({
                url: "/Employee/AddStudent",
                method: "POST",
                data: obj,
                success: function (data) {
                    alert(data);
                    //data = JSON.parse(data);
                    //console.log(data);
                },
                error: function (err) {
                    console.error(err);
                }
            })
        }

